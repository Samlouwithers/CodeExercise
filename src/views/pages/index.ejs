<!DOCTYPE html>
<html lang="en" ng-app="app">
    <head>
        <meta charset="UTF-8">
        <title>My App</title>
        <link rel="stylesheet" type="text/css" href="css/main.css">
        <% include ../partials/_fonts %>
        <script src="/js/main.js"></script>
    </head>
    <body>
        <div class="titleContainer">
            <div class="title">
                <div ng-controller="MainController">
                    <h1>Exercise 1 - Testimonial Block</h1>
                </div>
            </div>
        </div>
        <div class="testimonial contextContainer">
            <% include ../partials/_testimonial %>
        </div>

        <div class="titleContainer">
            <div class="title">
                <h1>Exercise 2 - Quote CTA</h1>
            </div>
        </div>
        <div class="quote contextContainer clearfix">
            <% include ../partials/_cta %>
        </div>

        <div class="titleContainer">
            <div class="title">
                <div ng-controller="MainController">
                    <h1>Exercise 3 - Filterable Content</h1>
                </div>
            </div>
        </div>

            <div ng-controller="StoreController as store">
                <div ng-repeat="product in store.products">
                    <h1>{{product.name}}</h1>
                    <h2>{{product.price}}</h1>
                    <p>{{product.description}}</p>
                    <button ng-show="store.product.canPurchase">Add to Cart</button>
                </div>
            </div>

            <div ng-controller="moviesController" class="movie contextContainer clearfix">
                <% include ../partials/_filterable-content %>
            </div>

            <div ng-controller="moviesController">
                <div ng-repeat="movie in movies">
                    {{movie.title}}
                </div>
            </div>
        </div>
    </body>
</html>